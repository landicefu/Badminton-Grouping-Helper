<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/background">

    <View
            android:id="@+id/courtGround"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/court_ground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="H,44:20"
            app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/courtHorizontalMiddle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@id/courtGround"
            app:layout_constraintRight_toRightOf="@id/courtGround"
            app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/courtVerticalMiddle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround"
            app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/courtHorizontalTop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround"
            app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/courtHorizontalBottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@id/courtGround"
            app:layout_constraintRight_toRightOf="@id/courtGround"
            app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/courtVerticalLeft1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround"
            app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/courtVerticalLeft2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround"
            app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/courtVerticalRight1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround"
            app:layout_constraintGuide_percent="0.91" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/courtVerticalRight2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround"
            app:layout_constraintGuide_percent="0.65" />

    <View
            android:layout_width="0dp"
            android:layout_height="@dimen/court_line_width"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintLeft_toLeftOf="@id/courtGround"
            app:layout_constraintRight_toRightOf="@id/courtGround" />

    <View
            android:layout_width="0dp"
            android:layout_height="@dimen/court_line_width"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/courtHorizontalTop"
            app:layout_constraintBottom_toBottomOf="@id/courtHorizontalTop"
            app:layout_constraintLeft_toLeftOf="@id/courtGround"
            app:layout_constraintRight_toRightOf="@id/courtGround" />

    <View
            android:layout_width="0dp"
            android:layout_height="@dimen/court_line_width"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/courtVerticalMiddle"
            app:layout_constraintBottom_toBottomOf="@id/courtVerticalMiddle"
            app:layout_constraintLeft_toLeftOf="@id/courtGround"
            app:layout_constraintRight_toRightOf="@id/courtVerticalLeft2" />

    <View
            android:layout_width="0dp"
            android:layout_height="@dimen/court_line_width"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/courtVerticalMiddle"
            app:layout_constraintBottom_toBottomOf="@id/courtVerticalMiddle"
            app:layout_constraintLeft_toLeftOf="@id/courtVerticalRight2"
            app:layout_constraintRight_toRightOf="@id/courtGround" />

    <View
            android:layout_width="0dp"
            android:layout_height="@dimen/court_line_width"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/courtHorizontalBottom"
            app:layout_constraintTop_toTopOf="@id/courtHorizontalBottom"
            app:layout_constraintLeft_toLeftOf="@id/courtGround"
            app:layout_constraintRight_toRightOf="@id/courtGround" />


    <View
            android:layout_width="0dp"
            android:layout_height="@dimen/court_line_width"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/courtGround"
            app:layout_constraintLeft_toLeftOf="@id/courtGround"
            app:layout_constraintRight_toRightOf="@id/courtGround" />

    <View
            android:layout_width="@dimen/court_line_width"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/courtGround"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround" />

    <View
            android:layout_width="@dimen/court_line_width"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/courtVerticalLeft1"
            app:layout_constraintRight_toRightOf="@id/courtVerticalLeft1"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround" />

    <View
            android:layout_width="@dimen/court_line_width"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/courtVerticalLeft2"
            app:layout_constraintRight_toRightOf="@id/courtVerticalLeft2"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround" />

    <View
            android:layout_width="@dimen/court_line_width"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/courtVerticalRight2"
            app:layout_constraintRight_toRightOf="@id/courtVerticalRight2"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround" />

    <View
            android:layout_width="@dimen/court_line_width"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/courtVerticalRight1"
            app:layout_constraintRight_toRightOf="@id/courtVerticalRight1"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround" />

    <View
            android:layout_width="@dimen/court_line_width"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintRight_toRightOf="@id/courtGround"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="90"
            app:layout_constraintTop_toTopOf="@id/courtGround"
            app:layout_constraintBottom_toBottomOf="@id/courtGround"
            app:layout_constraintLeft_toLeftOf="@id/courtGround"
            app:layout_constraintRight_toRightOf="@id/courtGround"
            android:text="@string/versus"/>

    <TextView
            android:id="@+id/teamAPlayer1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/courtHorizontalTop"
            app:layout_constraintBottom_toBottomOf="@id/courtVerticalMiddle"
            app:layout_constraintLeft_toLeftOf="@id/courtVerticalLeft1"
            app:layout_constraintRight_toRightOf="@id/courtVerticalLeft2"
            tools:text="Player 1"/>

    <TextView
            android:id="@+id/teamAPlayer2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/courtVerticalMiddle"
            app:layout_constraintBottom_toBottomOf="@id/courtHorizontalBottom"
            app:layout_constraintLeft_toLeftOf="@id/courtVerticalLeft1"
            app:layout_constraintRight_toRightOf="@id/courtVerticalLeft2"
            tools:text="Player 2"/>

    <TextView
            android:id="@+id/teamBPlayer1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/courtHorizontalTop"
            app:layout_constraintBottom_toBottomOf="@id/courtVerticalMiddle"
            app:layout_constraintLeft_toLeftOf="@id/courtVerticalRight2"
            app:layout_constraintRight_toRightOf="@id/courtVerticalRight1"
            tools:text="Player 3"/>

    <TextView
            android:id="@+id/teamBPlayer2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/courtVerticalMiddle"
            app:layout_constraintBottom_toBottomOf="@id/courtHorizontalBottom"
            app:layout_constraintLeft_toLeftOf="@id/courtVerticalRight2"
            app:layout_constraintRight_toRightOf="@id/courtVerticalRight1"
            tools:text="Player 4"/>

</androidx.constraintlayout.widget.ConstraintLayout>